@model IEnumerable<workshop_asp.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

<style>
    /*.banner-img {
            max-width: 1900px;
        }

            .banner-img img {
                width: 100%;
                max-height: 375px;
                object-fit: cover;
            }*/
    .bg-banner {
        background: #fff url('/images/banner4.jpg') no-repeat center;
        background-size: contain;
        margin-top: 35px;
        margin-bottom: 35px;
    }

    .banner {
        height: 600px;
    }

    .banner-title {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .product {
        text-align: center;
    }

    .product-menu {
        width: 500px;
        margin: 0 auto;
    }

        .product-menu ul li {
            list-style-type: none;
            font-size: 18px;
            font-weight: bold;
        }

        .product-menu ul {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0;
        }

    .product-item-img {
        max-width: 300px;
    }

        .product-item-img img {
            width: 100%;
            height: 300px;
            object-fit: cover;
        }

    .product-card {
        max-width: 300px;
    }

    .product-title, .product {
        margin-bottom: 35px;
    }

    .card-center h4 {
        font-weight: bolder;
    }

    .btn-buy {
        color: black;
        width: 42%;
        border: 2px solid black !important;
        background-color: white;
    }

        .btn-buy:hover {
            background-color: black;
            color: white;
        }
</style>

<div class="bg-banner">
    <div class="banner">
        <div class="banner-title">
            <h1>Accessories to match your style.</h1>
            <p>Create the perfect desktop with our premium keyboard accessories.</p>
        </div>
    </div>
</div>

<div class="product">
    @*<div class="product-menu">
            <ul>
                <li>KeyBored</li>
                <li>Keycaps</li>
                <li>Case</li>
            </ul>
        </div>*@
    <div class="product-title">
        <h1>MECHANICAL KEYBOARD KIT</h1>
        <p> Build your own mechanical keyboard</p>
    </div>
    <div class="product-item">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4">
                        <div class="product-card">
                            <div class="card-header">
                                <div class="product-item-img">
                                    <img src="@item.ImagePath" />
                                </div>
                            </div>
                            <div class="card-center">
                                <h4>@item.ProductName</h4>
                                <p>฿@string.Format("{0:n}", @item.UnitPrice)</p>
                            </div>
                            <div class="card-bottom">
                                @Html.ActionLink("Buy", "ProductView", "Products", new { id = item.ProductId },
new { @class = "btn btn-buy" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

