
@model IEnumerable<workshop_asp.Models.OrderDetail>
@{
    ViewBag.Title = "OrderDetailPrview";
}

<style>
    ul.stepper {
        display: flex;
        flex-direction: row;
        width: 650px;
        justify-content: space-between;
        margin: 0 auto;
    }

        ul.stepper li {
            list-style-type: none;
        }

    .stepper-icon__1,
    .stepper-icon__2,
    .stepper-icon__3 {
        max-width: 200px;
        max-height: 200px;
        border: 4px solid #dbdbdb;
        border-radius: 100%;
        padding: 4px 6px;
    }

        .stepper-icon__1 i,
        .stepper-icon__2 i,
        .stepper-icon__3 i {
            color: #dbdbdb;
            display: inline-block;
            text-align: center;
            font-size: 22px;
            font-weight: bold;
            width: 45px;
            height: 36px;
            margin: 14px 0 0 0;
        }

    .line__1,
    .line__2 {
        border: 2px solid #dbdbdb;
        width: 210px;
    }

    li.stepper-line__1,
    li.stepper-line__2 {
        display: flex;
        align-items: center;
    }

    section {
        margin-bottom: 35px;
    }

    .card {
        display: flex;
        flex-direction: row;
        margin-bottom: 15px;
        padding: 20px 45px;
        background: #F1F1F1;
        border-radius: 6px;
    }

        .card > .card-item {
            margin: 10px;
        }

    .product-img {
        max-width: 190px;
    }

        .product-img img {
            width: 100%;
        }

    /*.detail-propduct {
        display: flex;
        flex-direction: column;
    }*/

    
</style>

<div class="container">
    <section>
        <h2>Order Detail Prview</h2>
    </section>
    <section>
        <ul class="stepper">
            <li>
                <div class="stepper-icon__1">
                    <i class="far fa-sticky-note"></i>
                </div>
            </li>
            <li class="stepper-line__1">
                <div class="line__1">
                </div>
            </li>
            <li>
                <div class="stepper-icon__2">
                    <i class="fas fa-truck"></i>
                </div>
            </li>
            <li class="stepper-line__2">
                <div class="line__2">
                </div>
            </li>
            <li>
                <div class="stepper-icon__3">
                    <i class="fas fa-check"></i>
                </div>
            </li>
        </ul>
    </section>
    <section>
        @foreach (var item in Model)
        {
            <div class="card">
                <div class="card-item" style="flex-basis: 471px;">
                    <div class="product-img">
                        <img src="@item.product.ImagePath" />
                    </div>
                </div>
                <div class="card-item">
                    <div class="detail-propduct">
                        <h3>@item.product.ProductName</h3>
                        <p>@item.product.ProductDetail</p>
                        <p class="text-right">
                            Qty: @item.Quantity  SubTotal: @item.UnitPrice
                        </p>
                    </div>
                </div>

            </div>
        }
    </section>
</div>

@section Scripts{
    <script type="text/javascript">
        StepperCheck();

        function StepperCheck() {
            if ("@ViewBag.Order_Status" == "Pendding") {
                console.log(333)
                $('.stepper-icon__1').css({ "border": "4px solid #2DC258" })
                $('.stepper-icon__1 i').css({ "color": "#2DC258" })
            }

        }

    </script>
}



